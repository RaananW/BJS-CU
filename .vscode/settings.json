{
    // Configure glob patterns for excluding files and folders.
    
    "files.associations": {
        "*.fx": "glsl"
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.vs": true,
        "**/.tempChromeProfileForDebug": true,
        "**/.temp": true,
        "**/dist": true,
        "**/*.map": true,
        "**/*.js": { 
             "when":"$(basename).ts"
         }       
    }
}